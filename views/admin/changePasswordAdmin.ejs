<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Change Password</title>

    <%- include('../headerFiles') %>

    <!-- jQuery JS -->
    <script src="../js/vendor/jquery-1.12.0.min.js"></script>
    <!-- jQuery Validate JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"
            integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg=="
            crossorigin="anonymous"></script>

    <style>
        label {
            font-weight: bold;
            font-size: 20px;
            color: #4A274F;
        }
        .error {
            font-size: 12px;
        }
    </style>

    <script>
        //  --* TO check Admin SESSION *--
        function checkSession() {
            let formData = new FormData();
            formData.append("action", "session");

            let httpRequest = new XMLHttpRequest();
            httpRequest.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    // alert(this.response);
                    if (this.response == "") {
                        window.location.assign("/admin/adminlogin")
                    } else {
                        document.getElementById("username").value = this.response;
                    }
                }
            }
            // httpRequest.open("GET", "./checkSession", true);
            httpRequest.open("POST", "./adminRequest", true);
            httpRequest.send(formData);
        }


        //  --* Update ADMIN data in Database *--
        function adminUpdatePassword() {

            $("#changepassword").validate();
            if ($("#changepassword").valid()) {

                let formControls = document.getElementById("changepassword").elements;

                let formData = new FormData();
                for (let i = 0; i < formControls.length; i++) {
                    formData.append(formControls[i].name, formControls[i].value);
                }

                let httpReq = new XMLHttpRequest();
                httpReq.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        console.log(this.response);
                        document.getElementById("btn1").innerHTML = "Change Password";

                        if (this.response == "success") {
                            document.getElementById("changepassword").reset();

                            setTimeout(() => {
                                alert("Password Changed");
                            }, 1000);

                        } else {
                            alert("Invalid old password");
                        }
                    } else {
                        document.getElementById("btn1").innerHTML = "<span class='spinner-border'></span>";
                    }
                }
                httpReq.open("POST", "./adminUpdatePassword", true);
                httpReq.send(formData);
            }
        }

        // jQuery page onload Event
        $(document).ready(function () {
            checkSession();
        })
    </script>
</head>
<body>

<!-- Main Wrapper Start -->
<div class="main-wrapper home-2">

    <%- include('adminHeader') %>

    <!-- breadcrumb-area start -->
    <div class="breadcrumb-area section-ptb pt-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2 class="breadcrumb-title">Change Password</h2>
                    <!-- breadcrumb-list start -->
                    <ul class="breadcrumb-list">
                        <li class="breadcrumb-item"><a href="/admin/admindashboard">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ul>
                    <!-- breadcrumb-list end -->
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area end -->

    <!--Form-->
    <div class="container mt-lg-5 mt-5 mb-5">
        <div class="row">
            <div class="col-12 col-lg-6 offset-lg-3">
                <!--<div class="col-sm-6 offset-sm-3">-->
                <div class="card">
                    <div class="card-header bg-secondary">
                        <h3 class="text-center text-white">Change Password</h3>
                        <!--<h1 class="alert alert-info text-center mt-3">Change Password</h1>-->
                    </div>
                    <div class="card-body bg-light">
                        <!--<form>-->
                        <form id="changepassword">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" readonly data-rule-required="true" id="username" name="username"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="oldpassword">Current Password</label>
                                <input type="password" data-rule-required="true" id="oldpassword" name="oldpassword"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="newpassword">New Password</label>
                                <input type="password" data-rule-required="true" id="newpassword" name="newpassword"
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="confirmpassword">Confirm Password</label>
                                <input type="password" data-rule-required="true" data-rule-equalto="#newpassword"
                                       id="confirmpassword" name="confirmpassword" class="form-control">
                            </div>
                            <div class="form-group text-center">
                                <button onclick="adminUpdatePassword()" id="btn1" type="button" class="btn btn-info">Change Password
                                </button>
                            </div>
                        </form>
                    </div>
                    <!--<div class="card-footer">-->

                    <!--</div>-->
                </div>
            </div>
        </div>
    </div>
    <!-- //Form-->

    <%- include('../footer') %>
</div>

</body>
</html>
