<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Manage Admin</title>

    <%- include('../headerFiles') %>

    <!-- jQuery JS -->
    <script src="../js/vendor/jquery-1.12.0.min.js"></script>
    <!-- jQuery Validate JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"
            integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg=="
            crossorigin="anonymous"></script>

    <style>
        label {
            color: #e97730;
            font-size: 20px;
            font-weight: bold;
        }

        .error {
            font-size: 12px;
        }
    </style>

    <script>

        // ADD (New Admin) Request Handler
        function addNewAdmin() {
            $("#adminForm").validate();
            if ($("#adminForm").valid()) {

                let formControls = document.getElementById("adminForm").elements;

                let formDta = new FormData();
                for (let i = 0; i < formControls.length; i++) {
                    if (formControls[i].type == "file") {
                        formDta.append(formControls[i].name, formControls[i].files[0]);
                    } else if (formControls[i].type == "radio") {
                        if (formControls[i].checked) {
                            formDta.append(formControls[i].name, formControls[i].value);
                        }
                    } else {
                        formDta.append(formControls[i].name, formControls[i].value);
                    }
                }

                let httpRequest = new XMLHttpRequest();
                httpRequest.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        document.getElementById("btn1").innerHTML = "SAVE";

                        // added
                        if (this.response == "added") {
                            getadmins();
                            $("#adminForm")[0].reset();
                            document.getElementById("output").innerHTML = "<h4 class='mt-2 text-center alert alert-success'>User Saved Successfully</h4>";
                        }// duplicate
                        else if (this.response == "duplicate") {
                            alert("This admin already exist");
                        }
                        // updated
                        else if (this.response == "updated") {
                            getadmins();
                            document.getElementById("output").innerHTML = "<h4 class='mt-2 text-center alert alert-info'>User Updated</h4>";
                        } else {
                            document.getElementById("output").innerHTML = "<h4 class='mt-2 text-center alert alert-warning'>Some Error Occurred</h4>";
                        }
                    } else {
                        document.getElementById("btn1").innerHTML = "<span class='spinner-border'></span>";
                    }
                }
                httpRequest.open('POST', './adminRequest', true);
                httpRequest.send(formDta);
            }
        }

        // VIEW Admin Request Handler
        function getadmins() {

            let formData = new FormData();
            // ID(action) ki Value (view) fix send karenge.
            formData.append("action", "view");

            let httpRequest = new XMLHttpRequest();
            httpRequest.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    let admins = JSON.parse(this.response);

                    let html = "<table class='table table-bordered'><thead><tr class='bg-info h4 text-center text-uppercase' style='color: white'>" +
                        "<th>Sr No.</th>" +
                        "<th>Username</th>" +
                        "<th>Email</th>" +
                        "<th>Type</th>" +
                        "<th colspan='2'>Controls</th>" +
                        "</tr></thead><tbody>";

                    let srno = 1;
                    for (let admin of admins) {
                        html += "<tr class='bg-secondary text-center' style='color: white'>";

                        html += "<td>" + srno + "</td>";
                        html += "<td>" + admin.username + "</td>";
                        html += "<td>" + admin.email + "</td>";
                        html += "<td>" + admin.type + "</td>";

                        // html += "<td><button type='button' class='btn btn-danger'><i class='fa fa-trash'></i> Delete</button></td>";
                        html += "<td><button type='button' class='btn btn-danger' onclick='delete_admin(\"" + admin.username + "\")'><i class='fas fa-trash-alt'></i> Delete</button></td>";

                        // html += "<td><button type='button' class='btn btn-warning'><i class='fa fa-edit'></i> Edit</button></td>";
                        html += "<td><button type='button' class='btn btn-warning' onclick='edit_admin(" + JSON.stringify(admin) + ")'><i class='fas fa-edit'></i> Edit</button></td>";


                        html += "</tr>";
                        srno++;
                    }

                    html += "</tbody></table>";

                    document.getElementById("content").innerHTML = html;
                } else {
                    document.getElementById("content").innerHTML = "<span class='spinner-border'></span>";
                }
            }
            httpRequest.open('POST', './adminRequest', true);
            httpRequest.send(formData);
        }

        //  --* TO check User SESSION is created or not *--
        function checkSession() {
            let formData = new FormData();

            
            formData.append("action", "session");

            let httpRequest = new XMLHttpRequest();
            httpRequest.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    // alert(this.response);
                    if (this.response == "") {
                        window.location.assign("/admin/adminlogin")
                    } else {

                    }
                }
            }
            // httpRequest.open("GET", "./checkSession", true);
            httpRequest.open("POST", "./adminRequest", true);
            httpRequest.send(formData);
        }

        // DELETE Admin
        function delete_admin(username) {

            if (confirm("Are you sure to delete Admin ?")) {

                var formdata = new FormData();
                formdata.append('username', username);
                formdata.append('action', 'delete');

                let httpRequest = new XMLHttpRequest();
                httpRequest.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {

                        if (this.response == "deleted") {
                            getadmins();
                            setTimeout(() => {
                                alert("Admin Deleted");
                            }, 1000);
                        }
                    } else {
                    }
                }
                httpRequest.open("POST", "./adminRequest", true);
                httpRequest.send(formdata);
            }
        }

        // ADD New Admin Modal || + icon
        function addAdmin() {
            $("#adminmodal").modal('show');
            $("#modal-heading").html('Create New Admin');

            //  --* RESET *--
            // document.getElementById("adminform").reset();
            console.log($("#adminForm"));
            console.log($("#adminForm")[0]);
            $("#adminForm")[0].reset();

            $("#username").attr('readonly', false);
            $("#action").val('add');

        }

        // UPDATE Admin Modal
        function edit_admin(admin_obj) {
            /*
            Same MODAL will be used to show at the time of UPDATE request
            */
            $("#adminmodal").modal('show');
            $("#modal-heading").html('Edit Admin');
            $("#username").val(admin_obj.username);
            $("#username").attr('readonly', true);
            $("#password").val(admin_obj.password);
            $("#email").val(admin_obj.email);
            $("#type").val(admin_obj.type);
            $("#action").val('edit');
        }

        // VIEW Admin Request
        // jQuery page onload Event || Get Admin data from (Server) Database Request
        $(document).ready(function () {
            // checkSession();

            // here we called-> getadmins(); Function to VIEW admin data.
            getadmins();
        })
    </script>
</head>
<body>

<!-- Main Wrapper Start -->
<div class="main-wrapper home-2">

    <%- include('adminHeader') %>

    <!-- breadcrumb-area start -->
    <div class="breadcrumb-area section-ptb pt-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2 class="breadcrumb-title">Manage Admin</h2>
                    <!-- breadcrumb-list start -->
                    <ul class="breadcrumb-list">
                        <li class="breadcrumb-item"><a href="/admin/admindashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Manage Admin</li>
                    </ul>
                    <!-- breadcrumb-list end -->
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area end -->

    <!-- Add new admin ICON (plus)-->
    <div class="container mt-5">

        <!--<div class="col-sm-6 col-lg-offset-3">-->
        <!--<div class="col-md-5 wthree_banner_bottom_left">-->
        <h2 class="text-center mt-3" style="text-decoration: underline">Manage <strong style="color: tomato;">ADMIN <i
                        class="fas fa-users fa-2x"></i></strong></h2>
        <hr>
        <button type="button" class="btn btn-success" onclick="addAdmin()">Add New ADMIN <i
                    class="fas fa-user-plus"></i></button>
        <br>
        <br>
        <div class="table-responsive" id="content"></div>
        <!--</div>-->
    </div>
    <!-- //Add new admin ICON (plus)-->

    <%- include('../footer') %>

    <!-- MODAL (ADD, EDIT)-->
    <div class="modal fade" id="adminmodal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="modal-heading" class="text-success font-weight-bold"></h2>
                    <hr>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="">
                            <form id="adminForm">

                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" data-rule-required="true" required id="username" name="username"
                                           class="form-control">
                                </div>

                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" data-rule-required="true" required id="password"
                                           name="password"
                                           class="form-control">
                                </div>

                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" data-rule-required="true" required id="email" name="email"
                                           class="form-control">
                                </div>

                                <div class="form-group">
                                    <label for="type">Type</label>
                                    <select data-rule-required="true" required name="type" id="type"
                                            class="form-control">
                                        <option value="">Select Type</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Sub-Admin">Sub-Admin</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <input type="hidden" name="action" id="action">
                                    <button type="button" id="btn1" class="btn btn-success" onclick="addNewAdmin()">SAVE
                                    </button>
                                    <button type="button" data-dismiss="modal" class="btn btn-dark">Cancel</button>
                                </div>

                                <div class="form-group">
                                    <div id="output"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!--<div class="modal-footer">-->
                <!--<a href="#" class="close" data-dismiss="modal">&times;</a>-->
                <!--</div>-->
            </div>
        </div>
    </div>
    <!-- //MODAL (ADD, EDIT)-->
</div>

</body>
</html>
