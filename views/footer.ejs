    function getcartproduct() {

        let httpRequest = new XMLHttpRequest();
        httpRequest.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {

                var data = JSON.parse(this.response);
                console.log(data);

                document.getElementById("cartcount").innerHTML = data.length;
            } else {
                // document.getElementById("cartcount").innerHTML = "<span class='spinner-border' ></span>";
            }
        }
        httpRequest.open("GET", "./getCartProductsFromServer", true);
        httpRequest.send();
    }

    function getAllProducts() {
        let httpRequest = new XMLHttpRequest();
        httpRequest.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var data = JSON.parse(this.response);
                // console.log(data);

                let html = "<div class='row'>";

                for (i = 0; i < data.length; i++) {

                    html += "<div class='col-lg-3 col-md-4 col-sm-6 mb-5'>";
                    html += "<div class='single-product-wrap'>";
                    html += "<div class='product-image'>";
                    html += "<a href='#'><img src='" + data[i].photo + "' alt=''></a>";

                    html += "<div class='product-content'>";
                    // <!-- <h3><a href="product-details.html">Products Name 001</a></h3>-->
                    html += "<h3 class='text-capitalize font-weight-bold'>" + data[i].productname + "</h3>";
                    html += "<p class='text-capitalize' style='color: #a7a9ac'>" + data[i].pdescription + "</p>";

                    if (data[i].discount > 0) {
                        // Calculation of Discounted Price
                        var newprice = Math.round(data[i].price - (data[i].price * (data[i].discount / 100)));

                        html += "<div class='price-box'>";
                        html += "<span class='old-price text-danger'>$ " + data[i].price + "</span>";
                        html += "&nbsp;&nbsp;";
                        html += " <span class='text-success'>" + data[i].discount + "% OFF</span>";
                        html += "<div class='text-center'>";
                        html += " <span class='new-price'>$ " + newprice + "</span>";
                        html += "</div>";
                        html += "</div>";
                    } else {
                        html += "<div class='price-box'>";
                        html += "<div class='text-center'>";
                        html += " <span class='new-price'>&#x20B9; " + data[i].price + "</span>";
                        html += "</div>";
                        html += "</div>";
                    }
                    // Add To Cart
                    html += "<div>";
                    html += "<button onclick='addtocart(" + JSON.stringify(data[i]) + ")' type='button' class='btn btn-info btn-lg text-capitalize'>Add To Cart</button>";
                    html += "</div>";
                    html += "</div>";
                    html += "</div>";
                    html += "</div>";
                    html += "</div>";
                }
                html += "</div>";

                document.getElementById("allproducts").innerHTML = html;
            } else {
                // document.getElementById("allproducts").innerHTML = "<span class='spinner-border' ></span>";
            }
        }
        httpRequest.open("GET", "./getAllProductsInIndexPage", true);
        httpRequest.send();
    }

    // *Button-> Add to CART
    function addtocart(obj) {
        // console.log(obj);
        let formdata = new FormData();
        formdata.append('product_obj', JSON.stringify(obj));
        formdata.append('action', 'add');

        let httpRequest = new XMLHttpRequest();
        httpRequest.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {

                console.log(this.response);

                if (this.response == "duplicate") {
                    window.location.assign('/users/usercart');
                } else {
                    alert("Product Added To Cart");
                    document.getElementById("cartcount").innerText = this.response;
                }
            }
        }
        httpRequest.open("POST", "./addToCartSelectedProduct", true);
        httpRequest.send(formdata);
    }
</script>


